class fruits:
    def __init__(self,name,colour,taste):
        self.name=name
        self.colour=colour
        self.taste=taste
    def details(self):
        print(f"Name: {self.name}")
        print(f"Colour(s): {self.colour}")
        print(f"Taste: {self.taste}")

f1=fruits("Lemon","Yellow","Sour")
f2=fruits("Pear","Green","Sweet")
f3=fruits("Pineapple","Yellow","Tangy")
f1.details()
f2.details()
f3.details()
